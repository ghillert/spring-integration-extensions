<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-cache="http://www.springframework.org/schema/integration/cache"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration
		http://www.springframework.org/schema/integration/spring-integration-2.1.xsd
		http://www.springframework.org/schema/cache
		http://www.springframework.org/schema/cache/spring-cache.xsd
		http://www.springframework.org/schema/integration/cache
		http://www.springframework.org/schema/integration/cache/spring-integration-cache.xsd">

	<!-- See also: http://static.springsource.org/spring-integration/reference/htmlsingle/#gateway-proxy
		http://www.eaipatterns.com/MessagingGateway.html -->

	<!-- **************** Ehcache Manager Tests ********************* -->
	<bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager" p:cache-manager-ref="ehcache"/>

	<!-- Ehcache library setup -->
	<bean id="ehcache" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean" p:shared="true" p:config-location="classpath:ehcache.xml"/>

	<int:gateway id="cacheAsideGateway"
		default-request-timeout="5000" default-reply-timeout="5000"
		default-request-channel="cacheCheckChannel" service-interface="org.springframework.integration.cache.util.CacheCaller" />
	<int:channel id="cacheCheckChannel" />
	<int:service-activator id="getFromCache"
		input-channel="cacheCheckChannel" output-channel="getChannel" ref="cacheCaller"
		method="getData" />
	<int:channel id="getChannel" />

	<int-cache:outbound-gateway
		id="defaultSettingGateway"
		cache-name="mycache" auto-startup="true" order="1" request-channel="getDataOutputChannel" cache-manager-ref="cacheManager"
		reply-channel="endChannel" reply-timeout="100" />

	<int:channel id="validateChannel" />
	<int-cache:outbound-gateway
		id="cacheOutboundGateway"
		cache-name="mycache" auto-startup="true" order="1" request-channel="getDataOutputChannel" cache-manager-ref="cacheManager"
		reply-channel="endChannel" reply-timeout="100" />

	<int-cache:outbound-gateway
		id="badSettingGateway"
		cache-name="mycache" auto-startup="true" order="1" request-channel="badSettingChannel" cache-manager-ref="cacheManager"
		reply-channel="endChannel" reply-timeout="100" />

	<int-cache:outbound-gateway
		id="cacheOutboundWithCacheManager" cache-name="mycache"
		auto-startup="true" order="1" request-channel="cacheManagerChannel"
		cache-manager-ref="cacheManager"
		reply-channel="endChannel" reply-timeout="100" />

	<int-cache:outbound-gateway
		id="noCacheGateway"
		auto-startup="true" order="1" request-channel="getDataOutputChannel" cache-name="noCache" cache-manager-ref="cacheManager"
		reply-channel="endChannel" reply-timeout="100" />

	<!-- **************** Simple Cache Manager tests ********************* -->
<bean id="simpleCacheManager" class="org.springframework.cache.support.SimpleCacheManager">
  <property name="caches">
    <set>
      <bean class="org.springframework.cache.concurrent.ConcurrentMapCacheFactoryBean" p:name="default"/>
      <bean class="org.springframework.cache.concurrent.ConcurrentMapCacheFactoryBean" p:name="mycache"/>
    </set>
  </property>
</bean>
	<int-cache:outbound-gateway
		id="simpleCacheManagerOutboundGateway" cache-name="mycache"
		auto-startup="true" order="1" request-channel="simpleOutboundChannel"
		cache-manager-ref="cacheManager"
		reply-channel="endChannel" reply-timeout="100" />
<!-- **************  A terminating channel, to show the result before handing off back to application******** -->
<int:channel id="terminate" />
	<int:service-activator id="endOfLine"
		input-channel="endChannel" ref="cacheCaller" method="printData" />
		<!-- ********** The beans that hit call setup the call or get the data from the data source -->
	<bean id="cacheCaller" class="org.springframework.integration.cache.util.CacheCallerImp" />


</beans>
